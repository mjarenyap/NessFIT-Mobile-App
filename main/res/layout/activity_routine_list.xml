<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="mobapde.machineproject.thenessfit.RoutineListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="#efeff4"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow_dark"
            android:id="@+id/iv_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAILY ROUTINES"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#444444" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="30dp"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/sunday_routine">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday"
                android:textSize="20sp"
                android:layout_weight="2"
                android:textColor="#444444"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 exercises"
                android:textAlignment="textEnd"
                android:layout_weight="3"
                android:textSize="15sp"
                android:id="@+id/tv_sun"
                android:textColor="#444444"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/angle_arrow_right_red"
                android:id="@+id/iv_sun"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/monday_routine">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="#444444"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 exercises"
                android:textAlignment="textEnd"
                android:layout_weight="3"
                android:textSize="15sp"
                android:id="@+id/tv_mon"
                android:textColor="#444444"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/angle_arrow_right_red"
                android:id="@+id/iv_mon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/tuesday_routine">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="#444444"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 exercise"
                android:textAlignment="textEnd"
                android:layout_weight="3"
                android:textSize="15sp"
                android:id="@+id/tv_tues"
                android:textColor="#444444"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/angle_arrow_right_red"
                android:id="@+id/iv_tues"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/wednesday_routine">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wednesday"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="#444444"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 exercises"
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:id="@+id/tv_wed"
                android:textColor="#444444"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/angle_arrow_right_red"
                android:id="@+id/iv_wed"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/thursday_routine">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thursday"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="#444444"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 exercises"
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:id="@+id/tv_thurs"
                android:textColor="#444444"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/angle_arrow_right_red"
                android:id="@+id/iv_thurs"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/friday_routine">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friday"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="#444444"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 exercises"
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:id="@+id/tv_fri"
                android:textColor="#444444"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/angle_arrow_right_red"
                android:id="@+id/iv_fri"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/saturday_routine">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturday"
                android:layout_weight="2"
                android:textSize="20sp"
                android:textColor="#444444"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 exercises "
                android:layout_weight="3"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:id="@+id/tv_sat"
                android:textColor="#444444"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/angle_arrow_right_red"
                android:id="@+id/iv_sat"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
